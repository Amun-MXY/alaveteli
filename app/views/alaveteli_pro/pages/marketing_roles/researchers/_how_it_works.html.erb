<div class="marketing__section marketing__how-it-works">
  <h2>How it works</h2>

  <div class="row">
    <div class="how-it-works__grid">
      <%= render partial: 'alaveteli_pro/pages/marketing_roles/generic/how_it_works/make_request' %>
      <%= render partial: 'alaveteli_pro/pages/marketing_roles/generic/how_it_works/dashboard' %>
    </div>
  </div>

  <div class="row">
    <div class="how-it-works__grid">
      <%= render partial: 'alaveteli_pro/pages/marketing_roles/researchers/how_it_works/batch' %>
      <%= render partial: 'alaveteli_pro/pages/marketing_roles/generic/how_it_works/reminders' %>
    </div>
  </div>

  <div class="row">
    <div class="how-it-works__grid">
      <%= render partial: 'alaveteli_pro/pages/marketing_roles/researchers/how_it_works/embargoes' %>
      <%= render partial: 'alaveteli_pro/pages/marketing_roles/researchers/how_it_works/publishing' %>
    </div>
  </div>

  <div class="marketing__cta">
    <% if feature_enabled?(:pro_pricing) %>
    <%= link_to _('Plans and pricing'), pro_plans_path, class: "button" %>
    <% elsif feature_enabled?(:pro_self_serve) %>
      <%= render partial: 'self_serve_button' %>
    <% else %>
      <%= render partial: 'account_request_form' %>
    <% end %>
  </div>
</div>
